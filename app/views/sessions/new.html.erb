<header class="page-header">
  <h1>Login</h1>
</header>

<section>
  <%= form_tag '/login' do %>
    <div class="form-field"> 
      Email: <%= text_field_tag :email, nil,placeholder: "Email",class: 'input-field'%>
      Password: <%= password_field_tag :password, nil ,placeholder: "Password", class:'input-field' %>
    </div>
    <div>
      <%= submit_tag "Submit" ,class: "form-submit-btn" %>
    </div>
  <% end %>
</section>